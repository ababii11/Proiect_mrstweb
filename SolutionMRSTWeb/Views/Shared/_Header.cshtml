@{
    var isAuthenticated = User.Identity.IsAuthenticated;
    var isAdmin = User.IsInRole("Admin");
}

<div class="header-area">
    <div id="sticky-header" class="main-header-area">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-xl-3 col-lg-2">
                    <div class="logo">
                        <a href="@Url.Action("Index", "Home")">
                            <img src="~/img/logo.png" alt="Tasty Recipes Logo">
                        </a>
                    </div>
                </div>
                <div class="col-xl-6 col-lg-7">
                    <div class="main-menu d-none d-lg-block">
                        <nav>
                            <ul id="navigation">
                                <li>@Html.ActionLink("Home", "Index", "Home")</li>
                                <li>@Html.ActionLink("About", "About", "Home")</li>
                                <li>@Html.ActionLink("Recipes", "Recipes", "Home")</li>
                                <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                                @if (isAuthenticated)
                                {
                                    if (isAdmin)
                                    {
                                        <li class="admin-panel-btn">@Html.ActionLink("Admin Panel", "Index", "Admin", null, new { @class = "admin-link" })</li>
                                    }
                                    <li>@Html.ActionLink("Logout", "Logout", "Login")</li>
                                }
                                else
                                {
                                    <li>@Html.ActionLink("Login", "Index", "Login")</li>
                                }
                            </ul>
                        </nav>
                    </div>
                </div>
                <div class="col-12">
                    <div class="mobile_menu d-block d-lg-none"></div>
                </div>
            </div>
        </div>
    </div>
</div>
