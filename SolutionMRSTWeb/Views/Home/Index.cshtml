@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- slider_area_start -->
<div class="slider_area">
    <div class="single_slider d-flex align-items-center" style="background-image: url('../../Images/banner/banner.png'); background-size: cover; background-position: center;">
        <div class="container">
            <div class="row align-items-center justify-content-center">
                <div class="col-xl-8">
                    <div class="slider_text text-center">
                        <div class="text">
                            <h3 class="text-white" style="font-size: 48px; font-weight: 700; margin-bottom: 20px;">
                                Discover Delicious
                                Recipes
                            </h3>
                            <p class="lead text-white" style="font-size: 20px; margin-bottom: 30px; font-family: 'Comfortaa', cursive;">Explore our collection of mouth-watering recipes from around the world</p>
                        </div>
                        <a href="@Url.Action("Recipes", "Home")" class="boxed-btn3" style="background: #ff5e13; color: white; padding: 15px 30px; border-radius: 5px; text-decoration: none; font-weight: 600;">View All Recipes</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- slider_area_end -->

<!-- categories_area_start -->
<div class="categories_area" style="padding: 100px 0; background: #f8f9fa;">
    <div class="container">
        <div class="row">
            <div class="col-xl-12">
                <div class="section_title text-center mb-50">
                    <h3 style="font-size: 36px; font-weight: 700; margin-bottom: 20px;">Popular Categories</h3>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-4 col-md-6">
                <div class="single_cat text-center" style="background: white; padding: 40px 20px; border-radius: 10px; box-shadow: 0 5px 15px rgba(0,0,0,0.05); margin-bottom: 30px;">
                    <div class="cat_icon">
                        <img src="~/Images/imagesss/2771406.png" alt="Breakfast icon" style="width: 80px; height: 80px; margin-bottom: 20px;">
                    </div>
                    <h3 style="font-size: 24px; margin-bottom: 15px;">Breakfast</h3>
                    <p style="color: #666;">Start your day right with our delicious breakfast recipes</p>
                </div>
            </div>
            <div class="col-lg-4 col-md-6">
                <div class="single_cat text-center" style="background: white; padding: 40px 20px; border-radius: 10px; box-shadow: 0 5px 15px rgba(0,0,0,0.05); margin-bottom: 30px;">
                    <div class="cat_icon">
                        <img src="~/Images/imagesss/4825292.png" alt="Lunch icon" style="width: 80px; height: 80px; margin-bottom: 20px;">
                    </div>
                    <h3 style="font-size: 24px; margin-bottom: 15px;">Lunch</h3>
                    <p style="color: #666;">Quick and easy lunch ideas for busy days</p>
                </div>
            </div>
            <div class="col-lg-4 col-md-6">
                <div class="single_cat text-center" style="background: white; padding: 40px 20px; border-radius: 10px; box-shadow: 0 5px 15px rgba(0,0,0,0.05); margin-bottom: 30px;">
                    <div class="cat_icon">
                        <img src="~/Images/imagesss/4639426.png" alt="Dinner icon" style="width: 80px; height: 80px; margin-bottom: 20px;">
                    </div>
                    <h3 style="font-size: 24px; margin-bottom: 15px;">Dinner</h3>
                    <p style="color: #666;">Impressive dinner recipes for any occasion</p>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- categories_area_end -->

<!-- recepie_area_start -->
<div class="recepie_area" style="padding: 100px 0;">
    <div class="container">
        <div class="row">
            <div class="col-xl-12">
                <div class="section_title text-center mb-50">
                    <h3 style="font-size: 36px; font-weight: 700; margin-bottom: 20px;">Featured Recipes</h3>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-4 col-md-6">
                <div class="single_recepie text-center" style="margin-bottom: 30px;">
                    <div class="recepie_thumb" style="margin-bottom: 20px;">
                        <img src="~/Images/imagesss/authentic-italian-pasta-sauce-3.jpg" alt="Classic Italian Pasta" style="width: 100%; border-radius: 50%; object-fit: cover; aspect-ratio: 1/1; max-width: 320px; max-height: 320px;">
                    </div>
                    <h3 style="font-size: 24px; margin-bottom: 10px;">Classic Italian Pasta</h3>
                    <p style="color: #666; margin-bottom: 15px;">30 min | Easy</p>
                    <a href="@Url.Action("RecipeDetails", "Home")" class="line_btn" style="color: #ff5e13; text-decoration: none; font-weight: 600; border: 1px solid #ff5e13; border-radius: 30px; padding: 10px 30px; display: inline-block; margin-top: 10px;">View Recipe</a>
                </div>
            </div>
            <div class="col-lg-4 col-md-6">
                <div class="single_recepie text-center" style="margin-bottom: 30px;">
                    <div class="recepie_thumb" style="margin-bottom: 20px;">
                        <img src="~/Images/imagesss/featured-grilled-salmon-recipe.jpg" alt="Grilled Salmon" style="width: 100%; border-radius: 50%; object-fit: cover; aspect-ratio: 1/1; max-width: 320px; max-height: 320px;">
                    </div>
                    <h3 style="font-size: 24px; margin-bottom: 10px;">Grilled Salmon</h3>
                    <p style="color: #666; margin-bottom: 15px;">45 min | Medium</p>
                    <a href="@Url.Action("RecipeDetails", "Home")" class="line_btn" style="color: #ff5e13; text-decoration: none; font-weight: 600; border: 1px solid #ff5e13; border-radius: 30px; padding: 10px 30px; display: inline-block; margin-top: 10px;">View Recipe</a>
                </div>
            </div>
            <div class="col-lg-4 col-md-6">
                <div class="single_recepie text-center" style="margin-bottom: 30px;">
                    <div class="recepie_thumb" style="margin-bottom: 20px;">
                        <img src="~/Images/imagesss/IMG_4117-feature.jpg" alt="Chocolate Cake" style="width: 100%; border-radius: 50%; object-fit: cover; aspect-ratio: 1/1; max-width: 320px; max-height: 320px;">
                    </div>
                    <h3 style="font-size: 24px; margin-bottom: 10px;">Chocolate Cake</h3>
                    <p style="color: #666; margin-bottom: 15px;">60 min | Hard</p>
                    <a href="@Url.Action("RecipeDetails", "Home")" class="line_btn" style="color: #ff5e13; text-decoration: none; font-weight: 600; border: 1px solid #ff5e13; border-radius: 30px; padding: 10px 30px; display: inline-block; margin-top: 10px;">View Recipe</a>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- recepie_area_end -->

<!-- testimonial_area_start -->
<div class="testimonial_area" style="padding: 100px 0; background: #f8f9fa;">
    <div class="container">
        <div class="row">
            <div class="col-xl-12">
                <div class="section_title text-center mb-50">
                    <h3 style="font-size: 36px; font-weight: 700; margin-bottom: 20px;">What Our Users Say</h3>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-xl-12">
                <div class="testmonial_active owl-carousel">
                    <div class="single_carousel">
                        <div class="single_testmonial text-center" style="background: white; padding: 40px; border-radius: 10px; box-shadow: 0 5px 15px rgba(0,0,0,0.05);">
                            <div class="quote" style="margin-bottom: 20px;">
                                <img src="~/Images/testmonial/quote.png" alt="" style="width: 50px;">
                            </div>
                            <p style="font-size: 18px; color: #666; margin-bottom: 20px;">"These recipes have transformed my cooking experience. Easy to follow and delicious results!"</p>
                            <div class="testmonial_author">
                                <h3 style="font-size: 20px; margin-bottom: 5px;">Sarah Johnson</h3>
                                <span style="color: #666;">Home Cook</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- testimonial_area_end -->

<!-- newsletter_area_start -->
<div class="newsletter_area" style="padding: 100px 0; background: #ff5e13;">
    <div class="container">
        <div class="row">
            <div class="col-xl-12">
                <div class="newsletter_wrap text-center">
                    <h3 style="color: white; font-size: 36px; margin-bottom: 20px;">Subscribe to Our Newsletter</h3>
                    <p style="color: white; font-size: 18px; margin-bottom: 30px;">Get the latest recipes and cooking tips delivered to your inbox</p>
                    <form action="#" class="newsletter_form" style="max-width: 500px; margin: 0 auto;">
                        <input type="email" placeholder="Enter your email" style="width: 100%; padding: 15px; border: none; border-radius: 5px; margin-bottom: 15px;">
                        <button type="submit" style="background: white; color: #ff5e13; padding: 15px 30px; border: none; border-radius: 5px; font-weight: 600; cursor: pointer;">Subscribe</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- newsletter_area_end --> 