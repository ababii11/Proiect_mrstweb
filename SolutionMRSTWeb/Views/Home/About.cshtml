@{
    ViewBag.Title = "About Us";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- hero section with food imagery background (reduced height) -->
<div class="about_hero_area" style="background-image: url('@Url.Content("~/Images/food-4k-m37wpodzrcbv5gvw.jpg")'); background-size: cover; background-position: center center; background-attachment: fixed; position: relative; padding: 100px 0; margin-bottom: 80px; height: 50vh; overflow: hidden;">
    <!-- Decorative food elements -->
    <div class="decorative-food-1" style="position: absolute; top: -30px; right: -50px; width: 250px; height: 250px; background-image: url('@Url.Content("~/Images/food-4k-m37wpodzrcbv5gvw.jpg")'); background-size: cover; background-position: center; border-radius: 50%; opacity: 0.7; filter: saturate(130%); z-index: 1; box-shadow: 0 0 50px 10px rgba(0,0,0,0.4);"></div>
    <div class="decorative-food-2" style="position: absolute; bottom: -50px; left: -30px; width: 200px; height: 200px; background-image: url('@Url.Content("~/Images/food-4k-m37wpodzrcbv5gvw.jpg")'); background-size: cover; background-position: bottom right; border-radius: 50%; opacity: 0.6; filter: saturate(120%); z-index: 1; box-shadow: 0 0 50px 10px rgba(0,0,0,0.4);"></div>
    
    <!-- Overlay with gradient that allows more of the food image to show through -->
    <div class="hero_overlay" style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; background: linear-gradient(135deg, rgba(0,0,0,0.5), rgba(20,20,20,0.75)); z-index: 1;"></div>
    
    <!-- Content wrapper with higher z-index -->
    <div class="container position-relative" style="z-index: 3;">
        <div class="row justify-content-center">
            <div class="col-xl-8">
                <!-- Semi-transparent dark panel behind text for improved readability -->
                <div class="hero_content_panel" style="background-color: rgba(0,0,0,0.5); padding: 30px; border-radius: 15px; backdrop-filter: blur(5px);">
                    <div class="hero_text text-center">
                        <h1 style="font-size: 48px; font-weight: 800; color: #fff; margin-bottom: 15px; text-shadow: 2px 2px 4px rgba(0,0,0,0.5);">About Us</h1>
                        <p class="lead" style="color: #fff; font-size: 20px; max-width: 700px; margin: 0 auto; text-shadow: 1px 1px 3px rgba(0,0,0,0.5);">Discover the story behind our passion for creating and sharing delicious recipes</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- recepie_header_area with improved design -->
<div class="recepie_header_area" style="padding: 60px 0;">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xl-10">
                <div class="recepie_text text-center">
                    <div class="fancy_divider" style="width: 80px; height: 3px; background: #ff5e13; margin: 0 auto 30px;"></div>
                    <h2 style="font-size: 40px; font-weight: 700; margin-bottom: 30px;">Our Culinary Journey</h2>
                    <p style="font-size: 18px; line-height: 1.8; color: #555;">Founded in 2018 by a group of passionate food enthusiasts, our journey began with a simple mission: to make cooking accessible and enjoyable for everyone. What started as a small collection of family recipes has grown into a comprehensive platform featuring thousands of dishes from around the world.</p>
                    <p style="font-size: 18px; line-height: 1.8; color: #555; margin-top: 20px;">We believe that good food brings people together. Our team of experienced chefs and home cooks work tirelessly to test and perfect each recipe, ensuring that you can recreate these delicious dishes in your own kitchen with confidence and ease. From traditional classics to innovative creations, we're dedicated to helping you explore the wonderful world of culinary arts.</p>
                    <p style="font-size: 18px; line-height: 1.8; color: #555; margin-top: 20px;">Today, we're proud to serve a community of over 2 million food lovers who share our passion for cooking and eating well. Whether you're a beginner looking for simple weeknight meals or an experienced chef seeking culinary inspiration, we invite you to join us on this delicious adventure.</p>
                </div>
            </div>
        </div>
    </div>
</div>
<!--/ recepie_header_area  -->

<!-- recepie_videos with enhanced styling  -->
<div class="recepie_videoes_area" style="padding: 60px 0; background-color: #f8f9fa;">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-xl-6 col-lg-6 col-md-6">
                <div class="recepie_info" style="padding: 30px;">
                    <div class="fancy_divider" style="width: 60px; height: 3px; background: #ff5e13; margin-bottom: 25px;"></div>
                    <h3 style="font-size: 36px; font-weight: 700; margin-bottom: 25px;">Recipe Videos Worth Watching</h3>
                    <p style="font-size: 16px; line-height: 1.7; margin-bottom: 30px; color: #555;">Our step-by-step video tutorials make cooking easy and enjoyable. From knife skills to plating techniques, we cover all the details so you can create restaurant-quality dishes at home with confidence.</p>
                    <div class="video_watch d-flex align-items-center">
                        <a class="popup-video" href="https://www.youtube.com/watch?v=lr6AMBsjxrY" style="width: 60px; height: 60px; line-height: 60px; border-radius: 50%; background: #ff5e13; color: #fff; text-align: center; margin-right: 20px; box-shadow: 0 5px 15px rgba(255, 94, 19, 0.3);"> <i class="ti-control-play"></i> </a>
                        <div class="watch_text">
                            <h4 style="font-size: 20px; margin-bottom: 5px;">Watch Video</h4>
                            <p style="color: #666;">You will love our execution</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 col-md-6">
                <div class="videos_thumb" style="position: relative; box-shadow: 0 10px 30px rgba(0,0,0,0.1); border-radius: 10px; overflow: hidden;">
                    <div class="big_img">
                        <img src="@Url.Content("~/Images/istockphoto-1227493805-612x612.jpg")" alt="Online cooking tutorial" style="width: 100%; height: 350px; border-radius: 10px; object-fit: cover;">
                    </div>
                    <div class="small_thumb" style="position: absolute; bottom: 20px; left: 20px; width: 120px; height: 80px; border-radius: 5px; overflow: hidden; box-shadow: 0 5px 15px rgba(0,0,0,0.2);">
                        <img src="@Url.Content("~/Images/imagesss/pasta-cooking.jpg")" alt="Pasta cooking" style="width: 100%; height: 100%; object-fit: cover;">
                    </div>
                    <div class="small_thumb_2" style="position: absolute; bottom: 20px; right: 20px; width: 120px; height: 80px; border-radius: 5px; overflow: hidden; box-shadow: 0 5px 15px rgba(0,0,0,0.2);">
                        <img src="@Url.Content("~/Images/imagesss/dessert-making.jpg")" alt="Dessert making" style="width: 100%; height: 100%; object-fit: cover;">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!--/ recepie_videos   -->

